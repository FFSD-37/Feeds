          <!-- <li class="menu-item"><i class="fas fa-chart-line"></i> Analytics</li> -->
          <!-- <li class="menu-item"><i class="fas fa-calendar"></i> Calendar</li> -->
        </ul>
      </div>
      <div class="menu-section">
        <div class="menu-header">Management</div>
        <ul class="menu-items">
          <li class="menu-item"><i class="fas fa-users"></i> Users</li>
          <!-- <li class="menu-item"><i class="fas fa-box"></i> Products</li>
          <li class="menu-item"><i class="fas fa-shopping-cart"></i> Orders</li> -->
          <li class="menu-item"><i class="fas fa-comment"></i> Reviews</li>
        </ul>
      </div>
