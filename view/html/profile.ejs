    <div id="menuOfpost" class="overlay">
        <div class="overlay-content">
            <span class="close-btn" onclick="closeOverlay()">x</span>
            <ul id="menu-list"></ul>
        </div>
    </div>

    <div id="overlay" class="overlay">
        <div class="overlay-content">
            <span class="close-btn" onclick="closeOverlay()">√ó</span>
            <h2 id="overlay-title"></h2>
            <ul id="overlay-list"></ul>
        </div>
    </div>
    <script>
        const myUser = JSON.parse('<%- JSON.stringify(myUser) %>');

        function showTab(tabId) {
            const tabs = ['posts', 'saved', 'liked', 'archive'];
            tabs.forEach(id => {
                document.getElementById(id).classList.add('hidden');
                document.querySelector(`[data-tab="${id}"]`).classList.remove('active');
            });
            document.getElementById(tabId).classList.remove('hidden');
            document.querySelector(`[data-tab="${tabId}"]`).classList.add('active');
        }

        function openOverlay(type) {
            const overlay = document.getElementById("overlay");
            const title = document.getElementById("overlay-title");
            const list = document.getElementById("overlay-list");
            list.innerHTML = "";       

            if (type === "followers") {
                title.textContent = "Followers";
                if (myUser.followers && myUser.followers.length > 0) {
                    for (let i = 0; i < myUser.followers.length; i++) {
                        const follower = myUser.followers[i];
                        // console.log(follower);
                        const li = document.createElement("li");
                        const a = document.createElement("a");
                        a.href = `/profile/${follower.username}`;
                        a.textContent = follower.username

                        li.appendChild(a);
                        list.appendChild(li);
                    }
                } else {
                    list.innerHTML = "<li>No followers yet.</li>";
                }
            } else if (type === "following") {
                title.textContent = "Following";
                if (myUser.followings && myUser.followings.length > 0) {
                    for (let i = 0; i < myUser.followings.length; i++) {
                        const following = myUser.followings[i];
                        const li = document.createElement("li");
                        const a = document.createElement("a");
                        a.href = `/profile/${following.username}`;
                        a.textContent = following.username
                        li.appendChild(a);
                        list.appendChild(li);
                    }
                } else {
                    list.innerHTML = "<li>Not following anyone.</li>";
                }
            }

            overlay.classList.add("show");
        }

        async function deletePost(id){
            await fetch(`/delete/${id}`, {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                }
            }).then((res) => {
                return res.json();
            }).then((data) => {
                if (data){
                    window.location.reload();
                    alert("Post deleted successfully")
                }
            })
        }

        async function archivePost(id){
            await fetch(`/archive/${id}`, {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                }
            }).then((res) => {
                return res.json();
            }).then((data) => {
                if (data){
                    window.location.reload();
                    alert("Post archived!!")
                }
            })
        }

        async function unarchive(id){
            await fetch(`/unarchive/${id}`, {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                }
            }).then((res) => {
                return res.json();
            }).then((data) => {
                if (data){
                    window.location.reload();
                    alert("Post unarchived!!")
                }
            })
        }

        async function unsavePost(id){
            await fetch(`/unsave/${id}`, {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                }
            }).then((res) => {
                return res.json();
            }).then((data) => {
                if (data){
                    window.location.reload();
                    alert("Post unsaved!!")
                }
            })
        }

        function openMenu(type, id){
            const overlay = document.getElementById("menuOfpost");
            const list = document.getElementById("menu-list");
            list.innerHTML = '';
            if (type === 'post'){
                list.innerHTML += `
                    <li><a style="text-decoration: none; color: white;" onclick=deletePost('${id}')>Delete Post [Can't be undone‚ö†Ô∏è]</a></li>
                    <li><a style="text-decoration: none; color: white;" onclick=archivePost('${id}')>Archive Post</a></li>                
                `;
            } else if (type === 'saved') {
                list.innerHTML += `
                    <li><a style="text-decoration: none; color: white;" onclick="unsavePost('${id}')">Unsave Post</a></li>
                `;
            } else if (type === "archived"){
                list.innerHTML += `
                    <li><a style="text-decoration: none; color: white;" onclick="unarchive('${id}')">Unarchive Post</a></li>
                `;
            }
            overlay.classList.add("show");
        }

        function closeOverlay() {
            document.getElementById("menuOfpost").classList.remove("show");
            document.getElementById("overlay").classList.remove("show");
        }

        function create_post(){
            window.location.href = "/create_post";
        }
    </script>
</body>
