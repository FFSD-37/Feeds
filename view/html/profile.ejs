<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Instagram Profile</title>
    <link rel="stylesheet" href="../css/profile.css" />
  </head>
  <body>
    <%- include('sidebar') %>
    <div class="container">
      <header class="profile-header">
        <div class="profile-pic">
          <img src="<%- myUser.profilePicture %>" alt="Profile Picture" />
        </div>
        <div class="profile-info">
          <div class="profile-info-header">
            <h2 class="username">
              <%- myUser.display_name %>
              <% if(myUser.isPremium === true) { %>
                <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#FFFFFF"><path d="m344-60-76-128-144-32 14-148-98-112 98-112-14-148 144-32 76-128 136 58 136-58 76 128 144 32-14 148 98 112-98 112 14 148-144 32-76 128-136-58-136 58Zm34-102 102-44 104 44 56-96 110-26-10-112 74-84-74-86 10-112-110-24-58-96-102 44-104-44-56 96-110 24 10 112-74 86 74 84-10 114 110 24 58 96Zm102-318Zm-42 142 226-226-56-58-170 170-86-84-56 56 142 142Z"/></svg>
              <% } %>
            </h2>
          </div>
          <div class="profile-stats">
            <div class="stat">
              <span><%- (myUser && myUser.postIds) ? myUser.postIds.length : 0 %></span> posts
            </div>
            <div class="stat">
              <span><%- (myUser && myUser.followers) ? myUser.followers.length : 0 %></span> followers
            </div>
            <div class="stat">
              <span><%- (myUser && myUser.followings) ? myUser.followings.length : 0 %></span> following
            </div>
          </div>
          
          <div class="profile-bio">
            <strong><%- myUser.bio %></strong><br />
          </div>
          <div class="profile-info-header">
            <button class="edit-profile"><a href="/edit_profile" style="text-decoration: none; color: black;">Edit Profile</a></button>
            <button class="archive"><a href="/settings" style="text-decoration: none; color: black">Settings</a></button>
          </div>
          <div class="profile-info-header">
            <button class="edit-profile"><a href="/create_channel" style="text-decoration: none; color: black;">Create Channel</a></button>
          </div>
        </div>
      </header>

      <nav class="posts-nav">
        <div
          class="nav-item2 active"
          data-tab="posts"
          onclick="showTab('posts')"
        >
          üì∑ Posts
        </div>
        <div class="nav-item2" data-tab="saved" onclick="showTab('saved')">
          üîñ Saved
        </div>
        <div class="nav-item2" data-tab="liked" onclick="showTab('liked')">
          üíï Liked
        </div>
        <div class="nav-item2" data-tab="archive" onclick="showTab('archive')">
          üìÅ Archive
        </div>
      </nav>
      <div id="posts" class="posts-grid">
        <% if (posts && posts.length > 0) { %>
          <% posts.forEach(post => { %>
            <div class="post">
              <img src="<%= post.url %>" alt="Post image" />
            </div>
          <% }) %>
        <% } else { %>
          <div class="no-posts-msg">No posts yet.</div>
        <% } %>
      </div>      
      <div id="saved" class="posts-grid hidden">
        <% if (saved && saved.length > 0) { %>
          <% saved.forEach(save => { %>
            <div class="post">
              <img src="<%= save.url %>" alt="Post image" />
            </div>
          <% }) %>
        <% } else { %>
          <div class="no-posts-msg">No saved posts yet.</div>
        <% } %>
      </div>
      <div id="liked" class="posts-grid hidden">
        <% if (liked && liked.length > 0) { %>
          <% liked.forEach(like => { %>
            <div class="post">
              <img src="<%= like.url %>" alt="Post image" />
            </div>
          <% }) %>
        <% } else { %>
          <div class="no-posts-msg">No liked posts yet.</div>
        <% } %>
      </div>
      <div id="archive" class="posts-grid hidden">
        <% if (archived && archived.length > 0) { %>
          <% archived.forEach(archive => { %>
            <div class="post">
              <img src="<%= archive.url %>" alt="Post image" />
            </div>
          <% }) %>
        <% } else { %>
          <div class="no-posts-msg">No archived posts yet.</div>
        <% } %>
      </div>
    </div>
