<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create new post</title>
    <link rel="stylesheet" href="../css/create_post3.css">
    <script
      type="module"
      src="https://cdn.jsdelivr.net/npm/emoji-picker-element@1.6.3/index.js"
    ></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_GOOGLE_API_KEY&libraries=places"></script>
  </head>
  <body>
    <div class="create-post3">
      <div class="header">
        <div class="header-title">Create new post</div>
      </div>
      <div class="content">
        <div class="image-create-post3">
          <img
            id="post-image"
            class="post-image"
            src="./pfp.png"
            alt="Post image preview"
          />
        </div>
        <div class="right-side">
          <form action="/shareFinalPost" method="POST" id="create-post3">
            <div>
              <div class="user-info">
                <img
                  class="create_post_user_avatar3"
                  id="create_post_user_avatar3"
                  src="./pfp.png"
                  alt="User avatar"
                />
                <div class="username">Ayush</div>
              </div>
              <div class="caption-area">
                <div class="caption-wrapper">
                  <textarea
                    id="caption"
                    class="caption-input"
                    placeholder="Add a caption"
                  ></textarea>
                  <a id="emoji-button" class="emoji-button" style="text-decoration: none;">😊</a>
                  <emoji-picker id="emoji-picker"></emoji-picker>
                </div>
              </div>

              <div class="options">
                <div class="option-button">
                  <div class="option-icon">📍</div>
                  Add location
                </div>
                <input
                  type="text"
                  id="location"
                  class="location-input"
                  placeholder="Type a place..."
                />
              </div>

              <div class="comments-toggle">
                <input type="checkbox" id="toggle-comments" checked />
                <label for="toggle-comments">Enable comments</label>
              </div>
            </div>
            <div class="footer">
              <button class="share-button" type="submit">Share</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <script src="../js/create_post3.js"></script>
  </body>
</html>