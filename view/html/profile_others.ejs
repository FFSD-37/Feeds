<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile Page</title>
    <link rel="stylesheet" href="../css/profile.css" />
    <style>
        .overlay-content {
            width: 300px;
        }

        .close-btn {
            position: absolute;
            top: 5px;
            right: 15px;
            font-size: 20px;
            cursor: pointer;
        }

        .overlay-list {
            list-style: none;
            padding-left: 0;
            margin-bottom: 0;
        }

        .overlay-list li {
            padding: 10px;
            cursor: pointer;
            border-bottom: 1px solid #ddd;
            transition: background-color 0.3s;
            text-align: left;
        }

        .overlay-list li:last-child {
            border-bottom: none;
        }

        .overlay-list li:hover {
            background-color: #f0f0f0;
        }

        .overlay-list li a{
            color: #000;
            text-decoration: none;
        }

        .more-options-icon {
            font-size: 24px;
            cursor: pointer;
            padding: 5px;
            margin-left: 70px;
        }

    </style>
    <link rel="icon" type="image/*" href="https://ik.imagekit.io/FFSD0037/logo.jpeg?updatedAt=1746701257780">
</head>
<body>
    <%- include('sidebar') %>
    <div class="container">
        <header class="profile-header">
            <div class="profile-pic">
                <img src="<%- myUser.profilePicture %>" alt="Profile Picture" />
            </div>
            <div class="profile-info">
                <div class="profile-info-header">
                    <h2 class="username">
                        <%- myUser.username %> <% if(myUser.isPremium === true) { %>
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            height="24px"
                            viewBox="0 -960 960 960"
                            width="24px"
                            fill="#FFFFFF"
                        >
                            <path
                                d="m344-60-76-128-144-32 14-148-98-112 98-112-14-148 144-32 76-128 136 58 136-58 76 128 144 32-14 148 98 112-98 112 14 148-144 32-76 128-136-58-136 58Zm34-102 102-44 104 44 56-96 110-26-10-112 74-84-74-86 10-112-110-24-58-96-102 44-104-44-56 96-110 24 10 112-74 86 74 84-10 114 110 24 58 96Zm102-318Zm-42 142 226-226-56-58-170 170-86-84-56 56 142 142Z"
                            />
                        </svg>
                        <% } %>
                    </h2>
                    <div style="display: flex; align-items: center;">
                        <% if (isFriend) { %>
                        <button
                            id="unfollow-btn"
                            class="unfollow-btn"
                            onclick="unfollowUser('<%- myUser.username %>')"
                        >
                            Unfollow
                        </button>
                        <% } else if (isFollower) { %>
                        <button
                            id="follow-btn"
                            class="follow-btn"
                            onclick="followUser('<%- myUser.username %>')"
                        >
                            Follow Back
                        </button>
                        <% } else if (isRequested) { %>
                        <button id="unfollow-btn"
                                class="unfollow-btn"
                                onclick="unfollowUser('<%- myUser.username %>')">
                            Requested
                        </button>
                        <% } else { %>
                        <button
                            id="follow-btn"
                            class="follow-btn"
                            onclick="followUser('<%- myUser.username %>')"
                        >
                            Follow
                        </button>
                        <% } %>
                        <div class="more-options-icon" onclick="openOverlay()">
                            ‚ãÆ
                        </div>
                    </div>
                </div>
                <div class="profile-stats">
                    <div class="stat">
                        <span><%- (myUser && myUser.postIds) ? myUser.postIds.length : 0 %></span>
                        posts
                    </div>
                    <div class="stat clickable" onclick="openOverlay2('followers')">
                        <span><%- (myUser && myUser.followers) ? myUser.followers.length : 0 %></span>
                        followers
                    </div>
                    <div class="stat clickable" onclick="openOverlay2('following')">
                        <span><%- (myUser && myUser.followings) ? myUser.followings.length : 0 %></span>
                        following
                    </div>
                </div>
                <div class="profile-bio">
                    <strong><%- myUser.bio %></strong><br />
                </div>
            </div>
        </header>

        <% if(myUser.visibility === 'Public') { %>
        <nav class="posts-nav">
            <div
                class="nav-item2 active"
                data-tab="posts"
                onclick="showTab('posts')"
            >
                üì∑ Posts
            </div>
        </nav>
        <div id="posts" class="posts-grid">
            <% if (posts && posts.length > 0) { %> <% posts.forEach(post => { %>
            <div class="post">
                <% if (post.type === "Img") { %>
                    <img src="<%= post.url %>" alt="Post image" />
                <% } else { %>
                    <video src="<%= post.url %>" controls muted loop playsinline style="width: 100%; height: 100%; object-fit: cover;"></video>
                <% } %>
            </div>
            <% }) %> <% } else { %>
            <div class="no-posts-msg">No posts yet.</div>
            <% } %>
        </div>
        <% } else { %>
        <div class="private-msg-container">
            <div class="private-msg">
                üîê This user has set their profile as private. Follow this account to see
                their posts.
            </div>
        </div>
        <% } %>
    </div>
    <div class="footer">
        <a href="#"
            ><a href="/contact" style="text-decoration: none; color: black">About</a></a
        >
        ‚Ä¢
        <a href="#"
            ><a href="/help" style="text-decoration: none; color: black">Help</a></a
        >
        ‚Ä¢
        <a href="#"
            ><a href="/tandc" style="text-decoration: none; color: black">Terms</a></a
        >
        ‚Ä¢
        <a href="#"
            ><a
                href="https://www.google.com/maps/place/Indian+Institute+of+Information+Technology,+Sri+City,+Chittoor/@13.5555453,80.0240735,17z/data=!3m1!4b1!4m6!3m5!1s0x3a4d773f1e0f8721:0xadb0842ffc2719e4!8m2!3d13.5555453!4d80.0266484!16s%2Fm%2F0wbmm91?entry=ttu&g_ep=EgoyMDI1MDIxOS4xIKXMDSoASAFQAw%3D%3D"
                style="text-decoration: none; color: black"
                target="_blank"
                >Locations</a
            ></a
        >
        <p>
            ¬© 2025
            <a href="/home" style="text-decoration: none; color: rgb(216, 24, 24)"
                >Feeds</a
            >
            from IIIT Sri-City
        </p>
    </div>
    <div id="overlay" class="overlay">
        <div class="overlay-content">
            <span class="close-btn" onclick="closeOverlay()">√ó</span>
            <h2 id="overlay-title">Options</h2>
            <ul id="overlay-list">
                <li onclick="reportUser('<%- myUser.username %>')">Report User</li>
                <li onclick="blockUser('<%- myUser.username %>')">Block / Unblock User</li>
                <li onclick="shareTo('<%- myUser.username %>')">Share Profile</li>
                <li onclick="copyURL('<%- myUser.username %>')">Copy Profile Link</li>
                <li onclick="AboutOverlay()">About This Account</li>
                <li onclick="closeOverlay()">Cancel</li>
            </ul>
        </div>
    </div>
     <div id="overlay2" class="overlay">
        <div class="overlay-content">
            <span class="close-btn" onclick="closeOverlay2()">√ó</span>
            <h2 id="overlay-title2"></h2>
            <ul id="overlay-list2"></ul>
        </div>
    </div>
    <div id="aboutOverlay" class="overlay" style="display: none;">
        <div class="overlay-content">
            <span class="close-btn" onclick="closeAboutOverlay()">√ó</span>
            <h2 id="about-overlay-title">About This Account</h2>
            <ul id="about-overlay-list">
                <li><strong>Username:</strong> <%- myUser.username %></li>
                <li><strong>Full Name:</strong> <%- myUser.fullName %></li>
                <li><strong>Email:</strong> <%- myUser.email %></li>
                <li><strong>Joined:</strong> <%= new Date(myUser.createdAt).toLocaleDateString() %></li>            </ul>
        </div>
    </div>
    <script src="../js/profile.js"></script>
    <script>
        const myUser = JSON.parse('<%- JSON.stringify(myUser) %>');

        function showTab(tabId) {
            const tabs = ['posts'];
            tabs.forEach(id => {
                document.getElementById(id).classList.add('hidden');
                document.querySelector(`[data-tab="${id}"]`).classList.remove('active');
            });
            document.getElementById(tabId).classList.remove('hidden');
            document.querySelector(`[data-tab="${tabId}"]`).classList.add('active');
        }

        function openOverlay() {
            document.getElementById("overlay").classList.add("show");
        }

        function closeOverlay() {
            document.getElementById("overlay").classList.remove("show");
        }

        function reportUser(username) {
            fetch(`/report/${username}`, { 
                method: "POST",
                headers: { "Content-Type": "application/json" },
            }).then((res) => res.json()).then((data) => console.log(data));
            alert(`Reported user: ${username}`);
            closeOverlay();
        }

        async function blockUser(username) {
            await fetch(`/block/${username}`, {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                }
            }).then((res) => {
                return res.json();
            }).then((data) => {
                if (data.flag === "blocked"){
                    window.location.href = "/";
                    alert("User blocked successfully");
                }
                else{
                    window.location.href="/";
                    alert("User unblocked successfully");
                }
            })
            closeOverlay();
        }

        function shareTo(uname) {
            if (navigator.share) {
              navigator
                .share({
                  title: "My Profile",
                  url: `http://localhost:3000/profile/${uname}`,
                })
                .catch((err) => {
                  console.log("Error sharing:", err);
                });
            } else {
              alert("Share this URL: " + window.location.href);
            }
          }

        function copyURL(uname) {
            navigator.clipboard
              .writeText(window.location.href)
              .then(() => alert("Profile URL copied!"))
              .catch((err) => console.error("Could not copy text: ", err));
          }

        function AboutOverlay() {
            document.getElementById("aboutOverlay").style.display = "flex";
            closeOverlay();
        }

        function closeAboutOverlay() {
            document.getElementById("aboutOverlay").style.display = "none";
        }

        function openOverlay2(type) {
            const overlay = document.getElementById("overlay2");
            const title = document.getElementById("overlay-title2");
            const list = document.getElementById("overlay-list2");
            list.innerHTML = "";

            if (type === "followers") {
                title.textContent = "Followers";
                if (myUser.followers && myUser.followers.length > 0) {
                    for (let i = 0; i < myUser.followers.length; i++) {
                        const follower = myUser.followers[i];
                        const li = document.createElement("li");
                        const a = document.createElement("a");
                        a.href = `/profile/${follower.username}`;
                        a.textContent = follower.username;
                        li.appendChild(a);
                        list.appendChild(li);
                    }
                } else {
                    list.innerHTML = "<li>No followers yet.</li>";
                }
            } else if (type === "following") {
                title.textContent = "Following";
                if (myUser.followings && myUser.followings.length > 0) {
                    for (let i = 0; i < myUser.followings.length; i++) {
                        const following = myUser.followings[i];
                        const li = document.createElement("li");
                        const a = document.createElement("a");
                         a.href = `/profile/${following.username}`;
                        a.textContent = following.username;
                        li.appendChild(a);
                        list.appendChild(li);
                    }
                } else {
                    list.innerHTML = "<li>Not following anyone.</li>";
                }
            }

            overlay.classList.add("show");
        }

        function closeOverlay2() {
            document.getElementById("overlay2").classList.remove("show");
        }
    </script>
</body>
</html>
