<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Settings</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="icon"
      type="image/*"
      href="https://ik.imagekit.io/FFSD0037/logo.jpeg?updatedAt=1746701257780"
    />
    <link rel="stylesheet" href="../css/settings.css" />
    <link rel="stylesheet" href="../css/background.css">
  </head>
  <body>
    <%- include('sidebar') %>
    <div class="main-container">
      <div class="header">
        <h1>‚öôÔ∏è Settings</h1>
      </div>

      <div class="section">
        <h2><i class="fas fa-shield-alt"></i> Account Privacy</h2>
        <label class="profile-privacy-toggle">
          <div class="privacy-info">
            <div class="privacy-icon">
              <i class="fas fa-eye"></i>
            </div>
            <span class="profile-privacy-label">Make your profile public</span>
          </div>
          <input type="checkbox" id="publicToggle" />
          <span class="profile-privacy-slider"></span>
        </label>
      </div>

      <div class="section">
        <h2><i class="fas fa-user-slash"></i> Blocked Users</h2>
        <table class="data-table">
          <thead>
            <tr>
              <th>Username</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% if(Meuser.blockedUsers && Meuser.blockedUsers.length > 0) { %> <%
            blockedUsers.forEach((user) => { %>
            <tr>
              <td><strong>@<%= user %></strong></td>
              <td>
                <button
                  class="btn btn-unblock"
                  onclick="unblockUser('<%= user %>')"
                >
                  <i class="fas fa-user-check"></i> Unblock
                </button>
              </td>
            </tr>
            <% }); %> <% } else { %>
            <tr>
              <td colspan="2" class="no-data">No blocked users</td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <div class="section">
        <h2><i class="fas fa-share-nodes"></i> Profile Sharing</h2>
        <div class="button-group">
          <button class="btn btn-share" id="btnShareProfile">
            <i class="fa-solid fa-share-nodes"></i> Share Profile
          </button>
          <button class="btn btn-copy-url" id="btnCopyProfileUrl">
            <i class="fa-solid fa-copy"></i> Copy Profile URL
          </button>
        </div>
      </div>

      <div class="section">
        <h2><i class="fas fa-question-circle"></i> Help & Support</h2>
        <div class="button-group">
          <a href="/help" style="text-decoration: none">
            <button class="btn btn-help">
              <i class="fas fa-life-ring"></i> Get Help
            </button>
          </a>
          <a href="/activityLog" style="text-decoration: none">
            <button class="btn btn-help">
              <i class="fas fa-chart-line"></i> Activity Log
            </button>
          </a>
        </div>
      </div>

      <div class="section">
        <h2><i class="fas fa-user-circle"></i> Profile Information</h2>
        <div class="profile-info-grid">
          <div class="profile-info-card">
            <div class="profile-info-label">Username</div>
            <div class="profile-info-value">@<%= Meuser.username %></div>
          </div>
          <div class="profile-info-card">
            <div class="profile-info-label">Full Name</div>
            <div class="profile-info-value"><%= Meuser.fullName %></div>
          </div>
          <div class="profile-info-card">
            <div class="profile-info-label">Email</div>
            <div class="profile-info-value"><%= Meuser.email %></div>
          </div>
          <div class="profile-info-card">
            <div class="profile-info-label">Member Since</div>
            <div class="profile-info-value">
              <%= new Date(Meuser.createdAt).toDateString() %>
            </div>
          </div>
          <div class="profile-info-card">
            <div class="profile-info-label">Coins</div>
            <div class="profile-info-value">ü™ô <%= Meuser.coins %></div>
          </div>
        </div>
      </div>

      <div
        id="confirmModal"
        class="profile-privacy-modal-overlay"
        style="display: none"
      >
        <div class="profile-privacy-modal">
          <p class="profile-privacy-message">Change profile visibility?</p>
          <div>
            <button
              id="confirmYes"
              class="profile-privacy-btn profile-privacy-confirm-btn"
            >
              Yes
            </button>
            <button
              id="confirmNo"
              class="profile-privacy-btn profile-privacy-cancel-btn"
            >
              Cancel
            </button>
          </div>
        </div>
      </div>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const toggle = document.getElementById("publicToggle");
        const modal = document.getElementById("confirmModal");
        const yesBtn = document.getElementById("confirmYes");
        const noBtn = document.getElementById("confirmNo");

        toggle.checked = "<%= Meuser.visibility %>" === "Public";

        toggle.addEventListener("change", function (e) {
          modal.style.display = "flex";
        });

        yesBtn.addEventListener("click", function () {
          modal.style.display = "none";

          fetch("/togglePublicPrivate", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
          })
            .then((response) => {
              if (!response.ok) {
                throw new Error("Network response was not ok");
              }
              return response.json();
            })
            .then((data) => {
              console.log("Success:", data);
              location.reload();
            })
            .catch((error) => {
              console.error("Error:", error);
              toggle.checked = !toggle.checked;
            });
        });

        noBtn.addEventListener("click", function () {
          modal.style.display = "none";
          toggle.checked = !toggle.checked;
        });

        document
          .getElementById("btnShareProfile")
          .addEventListener("click", function () {
            if (navigator.share) {
              navigator
                .share({
                  title: "My Profile",
                  url: "http://localhost:3000/profile/<%= Meuser.username %>",
                })
                .catch((err) => {
                  console.log("Error sharing:", err);
                });
            } else {
              alert("Share this URL: " + window.location.href);
            }
          });

        document
          .getElementById("btnCopyProfileUrl")
          .addEventListener("click", function () {
            navigator.clipboard
              .writeText(window.location.href)
              .then(() => alert("Profile URL copied!"))
              .catch((err) => console.error("Could not copy text: ", err));
          });

        window.unblockUser = function (username) {
          if (confirm(`Are you sure you want to unblock ${username}?`)) {
            fetch(`/block/${username}`, {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
            })
              .then((res) => {
                return res.json();
              })
              .then((data) => {
                if (data){
                  window.location.href="/settings";
                  alert("Unblocked successfully");
                }
              })
              .catch((error) => {
                console.error("Error:", error);
              });
          }
        };
      });
    </script>
  </body>
</html>
